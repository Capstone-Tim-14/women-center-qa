{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/Welcome",
  "definitions": {
    "Welcome": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "code": {
          "type": "integer"
        },
        "message": {
          "type": "string"
        },
        "meta": {
          "$ref": "#/definitions/Meta"
        },
        "data": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Datum"
          }
        }
      },
      "required": [
        "code",
        "data",
        "message",
        "meta"
      ],
      "title": "Welcome"
    },
    "Datum": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string"
        },
        "thumbnail": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "author": {
          "$ref": "#/definitions/Author"
        },
        "published_at": {
          "type": "string"
        }
      },
      "required": [
        "author",
        "published_at",
        "slug",
        "status",
        "thumbnail",
        "title"
      ],
      "title": "Datum"
    },
    "Author": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "role"
      ],
      "title": "Author"
    },
    "Meta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "page": {
          "type": "integer"
        },
        "limit": {
          "type": "integer"
        },
        "total_page": {
          "type": "integer"
        },
        "total_rows": {
          "type": "integer"
        },
        "next_page": {
          "type": "string",
          "format": "uri",
          "qt-uri-protocols": [
            "https"
          ]
        },
        "previous_page": {
          "type": "string",
          "format": "uri",
          "qt-uri-protocols": [
            "https"
          ]
        }
      },
      "required": [
        "limit",
        "next_page",
        "page",
        "previous_page",
        "total_page",
        "total_rows"
      ],
      "title": "Meta"
    }
  }
}
